<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.jian1w.aidlclient.MainActivity"
    tools:showIn="@layout/activity_main"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        tools:layout_editor_absoluteY="248dp"
        tools:layout_editor_absoluteX="154dp"
        android:id="@+id/textView" />

    <Button
        android:id="@+id/button_bind"
        android:layout_width="99dp"
        android:layout_height="53dp"
        android:text="bind"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="195dp" />

    <Button
        android:id="@+id/button_unbind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="unbind"
        tools:layout_editor_absoluteY="200dp"
        app:layout_constraintLeft_toRightOf="@+id/button_bind"
        android:layout_marginLeft="8dp" />

    <Button
        android:id="@+id/button_call"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:text="call"
        tools:layout_editor_absoluteY="200dp"
        app:layout_constraintLeft_toRightOf="@+id/button_unbind"
        android:layout_marginLeft="8dp" />

    <Button
        android:id="@+id/btn_bind2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="BIN2"
        app:layout_constraintTop_toBottomOf="@+id/button_bind"
        tools:layout_editor_absoluteX="45dp" />

    <Button
        android:id="@+id/btn_unbind2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="unbind2"
        app:layout_constraintLeft_toRightOf="@+id/btn_bind2"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="52dp"
        app:layout_constraintTop_toBottomOf="@+id/button_unbind" />

    <Button
        android:id="@+id/btn_call2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="52dp"
        android:text="call2"
        app:layout_constraintLeft_toRightOf="@+id/btn_unbind2"
        app:layout_constraintTop_toBottomOf="@+id/button_call" />

</android.support.constraint.ConstraintLayout>